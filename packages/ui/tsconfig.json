{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["react", "jest", "node"],
    "outDir": "dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "~ui/static/*": ["static/*"],
      "~ui/*": ["src/*"]
    },
    "alwaysStrict": false,
    "noImplicitUseStrict": true
  },
  "include": ["src", "static", "src/.d.ts"],
  "exclude": [
    "../../node_modules",
    "node_modules",
    "dist",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx"
  ]
}
